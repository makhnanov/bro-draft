{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bro",
  "version": "0.1.0",
  "identifier": "com.bro.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "bro",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "decorations": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://api.coingecko.com https://*.cloudflare.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.coingecko.com https://*.cloudflare.com https://speed.cloudflare.com"
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": ["F12", "F5", "F11"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
